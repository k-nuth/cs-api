<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="GetKnuthCAPI">

    <!-- <Exec Command="conan remote add kth https://api.bintray.com/conan/k-nuth/kth -f" ContinueOnError="WarnAndContinue" /> -->
    <Exec Command="conan config install https://github.com/k-nuth/ci-utils/raw/master/conan/config.zip" ContinueOnError="WarnAndContinue" />

    <Message Text="Knuth Channel:  $(CONAN_CHANNEL)"/>
    <Message Text="Knuth Version:  $(CONAN_VERSION)"/>
    <Message Text="Knuth Currency: $(CONAN_CURRENCY)"/>
    <Message Text="Knuth Keoken:   $(CONAN_KEOKEN)"/>
    <Message Text="Knuth March ID: $(CONAN_MARCH_ID)"/>
    
    <WriteLinesToFile
      File="conanfile.txt" Lines="[requires];c-api/$(CONAN_VERSION)@kth/$(CONAN_CHANNEL);[generators];cmake;[options];c-api:shared=True;c-api:currency=$(CONAN_CURRENCY);c-api:keoken=$(CONAN_KEOKEN);c-api:db=default;c-api:march_id=$(CONAN_MARCH_ID);[imports];bin, *.dll    -> .;lib, *.so    -> .;lib, *.dylib    -> ."
      Overwrite="true"/>

    <Message Text="Operating System: $(OS)"/>
    <Exec Command="conan install . --install-folder=. -r kth" Condition=" '$(OS)' != 'Windows_NT' " />
    <Exec Command="conan install . --install-folder=. -r kth -s compiler=&quot;Visual Studio&quot; -s compiler.version=16" Condition=" '$(OS)' == 'Windows_NT' "/>
    <Message Text="OS = $(OS)" />
    <Copy SourceFiles="kth-c-api.dll" DestinationFiles="$(OutDir)libkth-c-api.dll" Condition=" '$(OS)' == 'Windows_NT' "/>
    <Copy SourceFiles="libkth-c-api.so" DestinationFiles="$(OutDir)libkth-c-api.so" Condition="Exists('libkth-c-api.so')"/>
    <Copy SourceFiles="libkth-c-api.dylib" DestinationFiles="$(OutDir)libkth-c-api.dylib" Condition="Exists('libkth-c-api.dylib')"/>
  </Target>
</Project>